  </div>
  <div class="w-full block flex-grow lg:flex lg:items-center lg:w-auto">
    <div class="text-sm lg:flex-grow">
      <%= link_to "Data Dashboard", admin_data_path, class: "block text-xl mt-4 lg:inline-block lg:mt-0 text-green hover:text-green-600 ml-28 mr-28" %>
      <%= link_to "Reports", admin_dashboard_path, class: "block text-xl mt-4 lg:inline-block lg:mt-0 text-green hover:text-green-600 ml-28 mr-28" %>

    </div>
    <div>
      <%= link_to 'Log out', destroy_admin_session_path, method: :delete, class: "text-xl hover:text-red-500" %>
