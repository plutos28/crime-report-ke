<div class="login-page">
  <% if resource_name == :admin %>
      <%= link_to "Crime Report | KE Admin", root_path, class: "login-page-brand-link" %>
      <h2 class="login-page-form-title">Log into your Admin account</h2>
  <% else %>
      <%= link_to "Crime Report | KE", root_path, class: "login-page-brand-link" %>
      <h2 class="login-page-form-title">Log into your account</h2>
  <% end %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field input-block">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-text", required: true %>
      <span class="placeholder">Email</span>
    </div>
  

    <div class="field input-block input-block-password">
      <%= f.password_field :password, autocomplete: "current-password", class: "input-text", required: true %>
      <span class="placeholder">Password</span>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field login-remember-me-block">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions login-page-submit-block">
      <%= f.submit "Log in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  
  <% if resource_name == :admin %>
    <%= link_to "User Login", new_user_session_path %><br />
  <% else %>
    <%= link_to "Admin Login", new_admin_session_path %><br />
  <% end %>

</div>
