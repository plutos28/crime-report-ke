<%# floating input label %>
div.input-block {
  position: relative;
}
div.input-block input {
  font-weight: 500;
  font-size: 1.6rem;
  color: #495055;
  width: 350px;
  padding: 15px 15px;
  border-radius: 8px;
  border: 1px solid  #D9D9D9;
  outline:none;
}
div.input-block span.placeholder {
  position: absolute;
  margin: 17px 0;
  padding: 0 4px;
  font-family: 'DM Sans', sans-serif;
  color:  #9ea1a3;
  display: flex;
  align-items: center;
  font-size: 20px;
  top: 3px;
  left: 16px;
  transition: all 0.2s;
  transform-origin: 0% 0%;
  background: none;
  pointer-events: none;
}
div.input-block input:valid + span.placeholder,
div.input-block input:focus + span.placeholder {
  transform: scale(0.8) translateY(-30px);
  background: #fff;
}
div.input-block input:focus{
  color: #284B63;
  border-color: #284B63;
}
div.input-block input:focus + span.placeholder {
  color: #284B63;
}

